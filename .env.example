# Telegram Bot Token (get from @BotFather on Telegram)
BOT_TOKEN=your_bot_token_here

# Google Gemini API Key (get from https://aistudio.google.com/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Secret passphrase for encrypting stored Tori authentication tokens
# Can be any string you choose
TORI_TOKEN_KEY=your_secret_passphrase_here

# Your numeric Telegram user ID (you become the admin)
# To find your ID, message @userinfobot on Telegram
ADMIN_TELEGRAM_ID=123456789

# Optional: Path to SQLite database file (defaults to sessions.db)
# TORI_DB_PATH=sessions.db
